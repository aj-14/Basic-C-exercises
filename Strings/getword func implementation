#include <stdio.h>

int getword(char str[]) {
    int i = 0;
    
    // Loop until null character is found
    while (str[i] != ' ' && str[i] != '\0') {
        i++;
    }
    
    // Null-terminate the first word
    str[i] = '\0';
    
    return i;
}

int main() {
    int len = 0;
    char str[100]; // declaring string

    printf("Enter the string : ");
    scanf(" %[^\n]", str);

    len = getword(str);

    printf("You entered %s and the length is %d\n", str, len);
    
    return 0;
}
